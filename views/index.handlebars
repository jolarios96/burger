<div>
    <h1>Hamburgers!</h1>
</div>

<div class='wrapper'>
    <div class='available-food'>
        <ul>
            <div class='header-label'>
                <h2>Burgers on the Table!</h2>
            </div>
            {{#each burgers}}
            {{#unless eaten}}
            {{> burgers/hamburger-block ate=true}}
            {{/unless}}
            {{/each}}
        </ul>
    </div>

    <div class='eaten-food'>
        <ul>
            <div class='header-label'>
                <h2>Burgers in your belly!</h2>
            </div>
            {{#each burgers}}
            {{#if eaten}}
            {{> burgers/hamburger-block ate=false}}
            {{/if}}
            {{/each}}
        </ul>
    </div>
</div>


<div class='order-form'>
    <h2>Order a new Burger</h2>
    <form class="create-form">

        <div class="form-group">
            <label for="ca">Hamburger Name:</label>
            <input type="text" id="ca" name="name">
        </div>

        <button type="submit">Add Hamburger</button>
    </form>
</div>